extends layout

block content
  header
    nav.navbar.navbar-default
      div.container
        div.navbar-header
          h1 Home Tap
        div.navbar.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') User Orders
            li.active
              a(href='/user/beers') Manage Beer Listings
            li
              a(href='/user/settings') Settings
            li
              a(href='/logout') Logout

  div.container
    div.col-xs-6.col-md-5
      ul
        each category, index in categorylist
          li 
            a(href='/admin/beers/category/#{index}') #{category}

    div.col-xs-12.col-md-7
      table(class='table table-striped ')
        thead
          tr: th Beers
        tbody
          each beer in beerlist
            tr
              td #{beer.name} 
              td
                if (beer.favorite)
                  button(class='favoriteButton', data-id='#{beer._id}', type='button') Un-Favorite
                else
                  button(class='favoriteButton', data-id='#{beer._id}', type='button') Favorite
              td
                if (beer.inQueue)
                  button(class='queueButton', data-id='#{beer._id}' type='button') Remove From Queue
                else
                  button(class='queueButton', data-id='#{beer._id}' type='button') Add To Queue

  script(type='text/javascript', src='/javascript/userlib.js')
