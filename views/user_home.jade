extends layout

block content
  nav.navbar.navbar-default
    div.container-fluid
      div.navbar-header
        button(type="btn" class="navbar-toggle" data-toggle="collapse")
        a(href='/user')
          img.nav(src='/images/HomeTap.jpg')
      div.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='/user') 
              button.nav(class='btn navbar-btn' type='button') Home
          li
            a(href='/user/beers')
              button.nav(class='btn navbar-btn' type='button') Browse Beer 
          li
            a(href='/logout')
              button.nav(class='btn navbar-btn' type='button') Logout 

  div.col-xs-18.col-md-12
    table(class='table table-striped')
      thead
        tr 
          th
            a(href='/')
              button(class='btn' type='button') Queue
          th 
            a(href='/user/favorites') 
              button(class='btn' type='button') Favorites
        tr
          th Beer Name
          th Description
          th Category
          th Stars
          th Remove
      tbody
        each beer in beerlist
          tr
            td #{beer.name} 
            td #{beer.description}
            td #{beer.category}
            td #{beer.stars}
            td: button(class='removeFromList', class='btn' data-id='#{beer._id}', type='button') Remove

    script(type='text/javascript', src='/javascript/user_home.js')

