extends layout

block content
  nav.navbar.navbar-default
    div.container-fluid
      div.navbar-header
        button(type="btn" class="navbar-toggle" data-toggle="collapse")
        a(href='/user')
          img.nav(src='/images/HomeTap.jpg')
      div(class='collapse navbar-collapse' id='spy-scroll-id')
        ul.nav.navbar-nav
          li
            a(href='/admin') 
              button.nav(class='btn navbar-btn' type='button') User Orders
          li
            a(href='/admin/beers')
              button.nav(class='btn navbar-btn' type='button') Manage Beer Listings 
          li
            a(href='/logout')
              button.nav(class='btn navbar-btn' type='button') Logout 

  div.container
    div.col-xs-4.col-md-3
      ul.list-group
        each category, index in categorylist
          li.list-group-item
            a(href='/admin/beers/category/#{index}') #{category}

    div.col-xs-10.col-md-6
      table(class='table table-striped ')
        thead
          tr: th Beers
        tbody
          each beer in beerlist
            tr
              td #{beer.name} 
                td
                  button(class='btn deleteButton', data-id= '#{beer._id}') Delete

    div.container
      div.row
        div.col-xs-8
          form(method='POST', action='/admin/beers')
            h4 Add New Beer
            input(type='hidden', name='_method', value='add') 
            input(type='text', name='name', placeholder='Beer Name')
            p Beer Name
            select(name='categoryId', placeholder='Category')
              option(value='', selected='selected')
                each cat, index in cats
                  option(value='#{index}') #{cat}
            p Category
            input(type='text', name='description', placeholder='Descripton')
            p Description
            input(type='number', name='stars', placeholder='Stars')
            p Stars
            input(type='submit', name='Add Beer', text='Add Beer')

  script(type='text/javascript', src='/javascript/adminLib.js')

