extends layout

block content
  header
    h1 Home Tap

  div.col-xs-4.col-md-3
    ul.list-group
      li.list-group-item
        a(href='/user') Queue 
      li.list-group-item
        a(href='/user/beers/favorite/') Favorites 
         

  .container
    nav
      a(href='/user/beers') 
        button(type='button') Browse New Beer           
    .queue
      each beer in user.queue
        div
          span(title=beer.description) #{beer.name} (Category: #{beer.category}) (Stars: #{beer.stars})
          &nbsp;&nbsp;
          a(href='/')
            button(type='button') Remove    
    p Current user: #{user.username}
    a(href='/logout') Logout
    
 