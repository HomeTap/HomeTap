extends layout

block content
  header
    h1 Welcome to Home Tap
  if (!user)
    p
      a(href='/login') Login
    p
      a(href='/register') Register
  else
    nav
      ul
        li Browse New Beer
        li Ready For Beer
    .queue
      each beer in user.queue
        div
          span(title=beer.description) #{beer.name} (Category: #{beer.category}) (Stars: #{beer.stars})
          &nbsp;&nbsp;
          a(href='/')
            button(type='button') Remove
          
    p Current user: #{user.username}
    a(href='/logout') Logout
