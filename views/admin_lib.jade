extends layout

block content
  header
    h1 Home Tap

  div.newbeer
    p Add New Beer

  div.form
    form(method='POST', action='/admin/beers')
      input(type='hidden', name='_method', value='add')

      p Beer Name
        input(type='text', name='name', placeholder='Beer Name')
      p Category
        select(name='categoryId', placeholder='Category')
          option(value='', selected='selected')
            each cat, index in cats
              option(value='#{index}') #{cat}
      p Description
        input(type='text', name='description', placeholder='Descripton')
      p Rating
        input(type='number', name='stars', placeholder='Stars')
      p Add Beer
        input(type='submit', name='Add Beer')

  div.categorylist
    .left
    ul
      each category, index in categorylist
        li 
          a(href='/admin/beers/category/#{index}') #{category}

  div.beerlist
    .right
    - each beer in beerlist
      p #{beer.name} 
        button(class='deleteButton', data-id= '#{beer._id}') Delete

  script(type='text/javascript', src='/javascript/adminLib.js')

